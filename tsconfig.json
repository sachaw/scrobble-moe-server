{
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "pretty": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
